<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#383838"
    android:showDividers="beginning|middle|end"
    android:divider="@drawable/shape">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:showDividers="beginning|middle|end"
        android:divider="@drawable/shape"
        android:layout_height="35dp">

        <TextView
            android:text="字号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="#d0d0d0"
            android:textSize="20dp"/>

        <Button
            android:text="A-"
            android:id="@+id/smallTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#d0d0d0"
            android:textSize="18dp"
            android:background="#383838"
            android:gravity="center_horizontal"/>

        <Button
            android:text="A+"
            android:id="@+id/bigTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#383838"
            android:textColor="#d0d0d0"
            android:textSize="22dp"
            android:gravity="center_horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:showDividers="beginning|middle|end"
        android:divider="@drawable/shape">

        <TextView
            android:text="背景"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textColor="#d0d0d0"
            android:textSize="20dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/white"
            android:id="@+id/whiteBackground"
            android:layout_weight="1"
            android:background="#383838"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/green"
            android:id="@+id/greenBackground"
            android:layout_weight="1"
            android:background="#383838"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/brown"
            android:id="@+id/brownBackground"
            android:layout_weight="1"
            android:background="#383838"/>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:text="夜间模式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_weight="1"
            android:textColor="#d0d0d0"
            android:gravity="center_horizontal"
            android:textSize="20dp"
            />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:layout_weight="1"
            android:textOff="Off"
            android:textOn="On"
            android:gravity="center_horizontal"
            android:layout_marginEnd="100dp"/>

    </LinearLayout>

</LinearLayout>